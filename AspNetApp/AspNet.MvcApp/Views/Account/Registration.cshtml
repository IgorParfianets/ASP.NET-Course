@using AspNetArticle.MvcApp.Models
@model UserRegistrationModel


@{
    ViewData["Title"] = "Registration";
}


<form asp-controller="Account" asp-action="Registration" method="post" class="container">
    
        <div class="row justify-content-center text-center">

            <div class="">
                <h1 class="">Registration</h1>
            </div>


            <!-- For UserName -->
            <div class="">

                <div class="">
                    <input asp-for="UserName" placeholder="Username">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <!-- For Email -->
            <div class="">

                <div class="">
                    <input asp-for="Email" placeholder="email@mail.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <!-- For Password -->
            <div class="">

                <div class="">
                    <input asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            </div>


            <!-- For ConfirmPassword -->
            <div class="">
                <div class="">
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>
            <!-- For Spam -->
            <div class="">

                <label asp-for="Spam" class="form-check-label">Spam</label>
                <input type="checkbox" asp-for="Spam" class="form-check-input" checked/>
            </div>
            <!-- Button Submit -->
            <div class="">
                <div class="">
                    <button type="submit" class="btn btn-primary">Create Account</button>
                </div>
                <div class="">
                    Already have an account? Click <a asp-controller="Account" asp-action="Login">here</a>
                </div>
            </div>
        </div>
        
        
    
    
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
