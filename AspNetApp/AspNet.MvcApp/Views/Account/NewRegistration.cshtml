@using AspNetArticle.MvcApp.Models
@model UserRegistrationModel

@{
    Layout = "_MyLayoutBootStrap";
}
@{
    ViewData["Title"] = "NewRegistration";
}

<form asp-controller="Account" asp-action="Registration" method="post" class="container col-3">
    <div class="row justify-content-center text-center">
        <div class="">
            <h1 class="">Registration</h1>
        </div>
        <!-- Email input-->
        <div class="form-group">

            <div class="col-md-12">
                <input asp-for="UserName" placeholder="Username" placeholder="Username" class="form-control input-md"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input asp-for="Email" placeholder="email@mail.com" class="form-control input-md">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <!-- Password input-->
        <div class="form-group">

            <div class="col-md-12">
                <input asp-for="Password" placeholder="Password" id="password" class="form-control input-md">
                <span class="show-pass" onclick="toggle()">
                    <i class="far fa-eye" onclick="myFunction(this)" style="position: absolute;"></i>
                </span>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div id="popover-password">
                    <p><span id="result"></span></p>
                    <div class="progress">
                        <div id="password-strength"
                             class="progress-bar"
                             role="progressbar"
                             style="width: 0%"></div>
                    </div>

                    <ul class="list-unstyled">
                        <li class="">
                            <span class="five-character">
                                <i class="fas fa-circle" aria-hidden="true"></i>
                                &nbsp;Atleast 5 Character
                            </span>
                        </li>
                        <li class="">
                            <span class="low-upper-case">
                                <i class="fas fa-circle" aria-hidden="true"></i>
                                &nbsp;Lowercase &amp; Uppercase
                            </span>
                        </li>
                        <li class="">
                            <span class="one-number">
                                <i class="fas fa-circle" aria-hidden="true"></i>
                                &nbsp;Number (0-9)
                            </span>
                        </li>
                        <li class="">
                            <span class="one-special-char">
                                <i class="fas fa-circle" aria-hidden="true"></i>
                                &nbsp;Special Character (!#$%^&*)
                            </span>
                        </li>
                        <li class="">
                            <span class="eight-character">
                                <i class="fas fa-circle" aria-hidden="true"></i>
                                &nbsp;More than 10 Character
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Button -->

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Account</button>
        </div>
        <div class="text-center">
            <p>
                Already have an account? Click <a asp-controller="Account" asp-action="Login">here</a>
            </p>
            <div class="divider"></div>
        </div>
    </div>
</form>
<script src="https://kit.fontawesome.com/1c2c2462bf.js"></script>
<script src="~/js/registrationProgress.js"></script>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
