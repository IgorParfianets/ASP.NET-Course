@model AspNetArticle.MvcApp.Models.AdminPageUserViewModel

@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "UserDetails";
}

@if (Model != null)
{
    <div class="col-auto container w-50 mt-5 mb-5">
        <h1 class="row-auto mt-5 mb-4 text-center">Пользователь</h1>

        <div class="form-group offset-1 gap-2 bg-white p-3" style="border-radius: 8px;">

            <div class="row">
                <p><strong>Id: </strong>@Model.User.Id</p>
            </div>

            <div class="row">
                <p><strong>Роль: </strong>@Model.User.Status.ToString()</p>
            </div>

            <div class="row">
                <p><strong>Имя: </strong>@Model.User.UserName</p>
            </div>

            <div class="row">
                <p><strong>E-mail: </strong>@Model.User.Email</p>
            </div>

            <div class="row">
                <p><strong>Последний визит: </strong>@Model.User.LastVisit.ToString("f")</p>
            </div>

            <div class="row">
                <p><strong>Дата создания аккаунта: </strong>@Model.User.AccountCreated.ToString("f")</p>
            </div>

            <div class="row">
                <p>
                    <strong>Рассылка: </strong>
                    @if (Model.User.Spam)
                    {
                        <span>Да</span>
                    }
                    else
                    {
                        <span>Нет</span>
                    }
                </p>
            </div>
            <div class="mt-5">
                <p><strong>Комментарии: </strong></p>
                @if (Model.Comments.Any())
                {
                    @foreach (var comment  in Model.Comments.OrderByDescending(com => com.PublicationDate))
                    {
                        <div class="bg-light offset-1 col-10 p-3 mt-2" style="border-radius: 6px;">

                            <div class="bg-white m-3 p-2 text-center" style="border-radius: 6px;">
                                <div class="m-2">
                                    <a asp-controller="Article" asp-action="Details" asp-route-id="@comment.ArticleId" class="btn-sm btn-outline-info">
                                        <small><strong>Перейти к новости</strong></small>
                                    </a>
                                </div>
                                <div class="row">
                                    <small><strong>@comment.ArticleName</strong></small>

                                </div>
                            </div>

                            <div class="container-sm">

                                <div class="d-flex justify-content-between">

                                    <div>
                                        <a asp-controller="Commentary" asp-action="Update" asp-route-id="@comment.Id" class="btn-sm btn-outline-success">
                                            <small>Редактировать</small>
                                        </a>
                                    </div>
                                    <div>
                                        <a asp-controller="Commentary" asp-action="Delete" asp-route-id="@comment.Id" class="btn-sm btn-outline-danger">
                                            <small>Удалить</small>
                                        </a>
                                    </div>

                                </div>
                            </div>

                            <hr/>

                            <div class="container-sm">
                                <div>
                                    @comment.Description
                                </div>
                            </div>
                            <div class="d-flex justify-content-end mt-3">
                                @if (comment.IsEdited)
                                {
                                    <div class="">
                                        <small><strong>Обновлен: </strong> @comment.PublicationDate.ToString("g")</small>
                                    </div>
                                }
                                else
                                {
                                    <div class="">
                                        <small><strong>Опубликован: </strong> @comment.PublicationDate.ToString("g")</small>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Пользователь ничего не комментировал</p>
                }
            </div>
        </div>
    </div>
}
else
{
    <h2>Пользователя не существует</h2>
}